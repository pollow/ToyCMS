    body
        form(action='/admin/product/add', method='POST', enctype='multipart/form-data', style='width:700px; margin: 0 auto')#product_add
            h1 Add a new product
            h3 Upload image
            input(type='file', name='img')
            h3 Name
            input(name='name')
            h3 Short Information
            div.pair
                input(name='short_info_key')
                input(name='short_info_value')
            input(type='button', value='Add').add.short-add
            h3 Major Information
            div.pair
                input(name='major_info_key')
                input(name='major_info_value')
            input(type='button', value='Add').add.major-add
            h3 Detail Information
            div.pair
                input(name='detail_info_key')
                input(name='detail_info_value')
            input(type='button', value='Add').add.detail-add
            h3 Group
            select(name='group_id')
                - for ( gid in groups ) {
                option(value='#{gid}') #{groups[gid].name}
                - }
            h3 Description
            textarea(name='description', style='height:500px; width: 690px')#editor_1
            script(charset='utf-8', src='/editor/kindeditor-min.js')
            script(charset='utf-8', src='/editor/lang/zh_CN.js')
            script
                | KindEditor.ready(function(K) {
                |         window.editor = K.create('#editor_1', {uploadJson: '/editor/upload_json'});
                | });

            h3 Mark
            input(name='mark')
            br
            br
            button.send#new_send Submit

